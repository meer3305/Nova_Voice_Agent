# Nova Configuration Template
# Copy this to .env and fill in your values

# ============================================================================
# REQUIRED CONFIGURATION
# ============================================================================

# Groq LLM API Key (FREE TIER AVAILABLE)
# Get here: https://console.groq.com
GROQ_API_KEY=sk_your_groq_api_key_here

# LLM Model (change if using different Groq model)
GROQ_MODEL=llama-3.1-8b-instant

# ============================================================================
# LOGGING & APP
# ============================================================================

LOG_LEVEL=INFO
APP_NAME=Nova

# ============================================================================
# GMAIL & GOOGLE CALENDAR (OPTIONAL)
# ============================================================================
# Setup instructions: See SETUP_GUIDE.md

GMAIL_CLIENT_ID=your_client_id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your_client_secret_here
GMAIL_REFRESH_TOKEN=your_refresh_token_here

# ============================================================================
# SMS/TWILIO (OPTIONAL)
# ============================================================================

TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_FROM_NUMBER=+1234567890

# ============================================================================
# DATABASE
# ============================================================================

SQLITE_PATH=nova.db

# ============================================================================
# TOOL SERVER (Internal)
# ============================================================================

TOOL_SERVER_URL=http://127.0.0.1:8000

# ============================================================================
# VOICE FEATURES (OPTIONAL - for voice.py only)
# ============================================================================

# Porcupine Wake Word (optional)
PORCUPINE_ACCESS_KEY=your_porcupine_key_here
PORCUPINE_KEYWORD_PATH=/path/to/hey_nova_en_windows_v3_2_0.ppn

# ElevenLabs TTS (optional)
ELEVENLABS_API_KEY=your_elevenlabs_key_here
ELEVENLABS_VOICE_ID=EXAVITQu4vr4xnSDxMaL

# OpenAI Whisper API (optional - for cloud transcription)
# Leave blank to use local faster-whisper
WHISPER_API_KEY=your_openai_api_key

# ============================================================================
# SCHEDULER (for voice mode)
# ============================================================================

SCHEDULER_INTERVAL_MINUTES=5
